= form_for @expense do |f|
  %div
    = f.label :description
    = f.text_field :description
  %div
    = f.label :amount
    = f.text_field :amount
  %div
    = f.label :applies_monthly?
    = f.check_box :applies_monthly?

  %div
    = f.submit
    = link_to 'cancel', '#', data: { toggle_add_expense: true }
