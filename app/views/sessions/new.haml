.row.section
  .col.s4.offset-s4
    .card
      .card-content
        = form_tag login_path do
          .row
            .input-field.col.s10.offset-s1
              = text_field_tag 'auth[email]', params[:email]
              = label_tag 'auth[email]', 'Email'
          .row
            .input-field.col.s10.offset-s1
              = password_field_tag 'auth[password]'
              = label_tag 'auth[password]', 'Password'

          .row
            .col.s5.offset-s1
              = link_to 'Forgot Password?', '#'
            .col.s5.right-align
              = button_tag 'Login', class: 'btn btn-large waves-effect waves-light'

          .row.center-align
            = link_to 'Don\'t have an account? Sign up', signup_path
